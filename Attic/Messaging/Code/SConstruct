import os


def Tools(env):
    tools = env['TOOLS']
    
    names = {
        'GNU': ['gcc', 'g++', 'mingw'],
        'MSVC': ['msvc'],
    }
    
    for (name, aliases) in names.items():
        for alias in aliases:
            if alias in tools:
                return name


env = Environment(CPPPATH = [os.path.join(os.environ['NPAPI_SDK'], 'include')])
tools = Tools(env)
name = 'npMessaging'
files = Glob('*.cpp')

if tools == 'GNU':
    env.Append(CCFLAGS = ['-ansi', '-pedantic', '-Wall'])
elif tools == 'MSVC':
    files += env.RES(name + '.rc')
    env.Append(CCFLAGS = ['/EHsc'])

env.SharedLibrary(name, files)
